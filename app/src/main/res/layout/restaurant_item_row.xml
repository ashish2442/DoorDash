<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/row_item_padding">
    <ImageView
            android:id="@+id/logo_image"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/row_item_text_padding"
            android:paddingEnd="@dimen/row_item_text_padding">
        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="Restaurant Name"/>
        <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_item_text_spacing"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="dummy, dummy,dummy, dummy,dummy, dummy,dummy, dummy,dummy, dummy,dummy, dummy"/>

    </LinearLayout>

    <TextView
            android:id="@+id/status"
            android:layout_gravity="end|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_item_text_spacing"
            android:ellipsize="end"
            tools:text="closed"
            android:singleLine="true"/>

</LinearLayout>